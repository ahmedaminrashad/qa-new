function suspended()
{
$s_date =$_REQUEST['start_date'];
$e_date =$_REQUEST['end_date'];
$result = mysql_query("SELECT * FROM account WHERE suspension_date >= '$s_date' AND suspension_date <= '$e_date'");

if (!$result) 
			{
			die("Query to show fields from table failed");
			}
