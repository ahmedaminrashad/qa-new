			}
		else if ($numberOfRows > 0) 
			{
			$var1 = $numberOfRows;
			 }
			 echo $var1;
		}
// Print out rows
$prefix = '';
echo "[\n";
  echo $prefix . " {\n";
  echo '  "date": "'.$s_date.' to '.$e_date.'",' . "\n";
  echo '  "trial": ' . "\n";
  echo '  ' . trials() . ',' . "\n";
  echo '  "regular": ' . "\n";
  echo '  ' . regulars() . ',' . "\n";
  echo '  "leave": ' . "\n";
  echo '  ' . leave() . ',' . "\n";
  echo '  "suspend": ' . "\n";
  echo '  ' . suspended() . ',' . "\n";
  echo '  "left": ' . "\n";
  echo '  ' . lefts() . '' . "\n";
  echo " }";
  $prefix = ",\n";
echo "\n]";

// Close the connection
mysql_close($link);
