function taskall()
{
// sending query
   $result = mysql_query("SELECT * FROM task");
if (!$result) 
	{
    die("Query to show fields from table failed");
	}
$tnumberOfRows = MYSQL_NUMROWS($result);
echo $tnumberOfRows;
}
