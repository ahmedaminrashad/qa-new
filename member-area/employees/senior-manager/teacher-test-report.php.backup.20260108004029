function abc($er)
{
// sending query
   $result = mysql_query("SELECT * FROM course Where Teacher = $er");
if (!$result) 
	{
    die("Query to show fields from table failed");
	}
$tnumberOfRows = MYSQL_NUMROWS($result);
echo $tnumberOfRows;
}

function test_created($t, $m, $y)
{
// sending query
   $result = mysql_query("SELECT * FROM test_results Where teacher_id = '$t' and MONTH(test_date) = $m AND YEAR(test_date) = $y");
if (!$result) 
	{
    die("Query to show fields from table failed");
	}
$tnumberOfRows = MYSQL_NUMROWS($result);
If ($tnumberOfRows == 0){
			echo '--';
			}
		else if ($tnumberOfRows > 0) 
			{
			echo $tnumberOfRows;
			}
	}
	
function test_taken($t, $m, $y)
{
// sending query
   $result = mysql_query("SELECT * FROM test_results Where teacher_id = '$t' and MONTH(test_date) = $m AND YEAR(test_date) = $y and status_id = 2");
if (!$result) 
	{
    die("Query to show fields from table failed");
	}
$tnumberOfRows = MYSQL_NUMROWS($result);
If ($tnumberOfRows == 0){
			echo '--';
			}
		else if ($tnumberOfRows > 0) 
			{
			echo $tnumberOfRows;
			}
	}
function test_remaining($t, $m, $y)
{
// sending query
   $result = mysql_query("SELECT * FROM test_results Where teacher_id = '$t' and MONTH(test_date) = $m AND YEAR(test_date) = $y and status_id = 1");
if (!$result) 
	{
    die("Query to show fields from table failed");
	}
$tnumberOfRows = MYSQL_NUMROWS($result);
If ($tnumberOfRows == 0){
			echo '--';
			}
		else if ($tnumberOfRows > 0) 
			{
			echo $tnumberOfRows;
			}
	}
