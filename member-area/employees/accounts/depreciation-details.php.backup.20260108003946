function dep_amu($var1, $var2, $var3){
$sql = "select sum(ad_amount) from adjusment_account where entry_id = $var1 AND date <= '$var2'";
$q = mysql_query($sql);
$row = mysql_fetch_array($q);
$second = $row[0];
$total = $var3-$second;
echo number_format($total, 2);
}
