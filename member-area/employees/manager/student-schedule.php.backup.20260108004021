  function abc($d, $t)
  {
  $pT =base64_decode($_GET['pT']);
			$result = mysql_query("SELECT `sched`.*, `course`.`course_yrSec`,`profile`.`teacher_name`,`day`.`day_name` FROM `sched`,`course`,`profile`,`day` WHERE sched.course_id=course.course_id and sched.teacher_id=profile.teacher_id and sched.day_id=day.day_id
 HAVING course_id ='$pT' and sday_id = '$d' and start_time_S = '$t'
  			");
			//HAVING course_id='$pCourse'
		if (!$result) 
			{
			die("Query to show fields from table failed");
			}
		$numberOfRows = MYSQL_NUMROWS($result);
		If ($numberOfRows == 0){
			echo '';
			}
		else if ($numberOfRows > 0) 
			{
			$i=0;
			while ($i<$numberOfRows)
				{			
					$sched = MYSQL_RESULT($result,$i,"sched_id");
					$TID = MYSQL_RESULT($result,$i,"teacher_id");
					$SID = MYSQL_RESULT($result,$i,"course_id");
					$hidden_pcourse = MYSQL_RESULT($result,$i,"course_yrSec");
					$hidden_pt = MYSQL_RESULT($result,$i,"teacher_name");
					$hidden_pday = MYSQL_RESULT($result,$i,"day_id");
					$tt1 = MYSQL_RESULT($result,$i,"time_start");
					$tt2 = MYSQL_RESULT($result,$i,"time_end");
					$trial = MYSQL_RESULT($result,$i,"status");
					$hidden_ptime2 = MYSQL_RESULT($result,$i,"day_name");
					$duration = MYSQL_RESULT($result,$i,"duration");
			  		echo "<b>Teacher:</b> ".$hidden_pt."<br><b>Time:</b> ".date("g:i a", strtotime($tt1))."<br><b>Duration:</b> ".$duration."<br><b>Day:</b> ".$hidden_ptime2." <br><a href='sched_c_del?sched_id=".$sched."'><button type='button' class='btn red btn-xs'>Delete</button></a>";
	$i++;	 
			}
			}
	}
function color($d, $t){
$pT =base64_decode($_GET['pT']);
			$result = mysql_query("SELECT * FROM sched HAVING course_id = $pT and sday_id = $d and start_time_S = '$t'
  			");
			//HAVING course_id='$pCourse'
		if (!$result) 
			{
			die("Query to show fields from table failed");
			}
		$numberOfRows = MYSQL_NUMROWS($result);
		If ($numberOfRows == 0){
			echo '#CECE0F';
			}
		else if ($numberOfRows > 0) 
			{
			echo '#989800';
			 }
		}
